<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">
<service-builder dependency-injector="ds" package-path="com.liferaybook.courses.manager">

	<author>Vitaliy Koshelenko</author>
	<namespace>lb</namespace>

	<entity name="Course" local-service="true" remote-service="false" uuid="true" cache-enabled="false">
		<!-- PK fields -->
		<column name="courseId" primary="true" type="long" />

		<!-- Company ID / Group ID Fields -->
		<column name="companyId" type="long" />
		<column name="groupId" type="long" />

		<!-- Audit Fields -->
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="urlTitle" type="String" />

		<!-- Order -->
		<order by="asc">
			<order-column name="name" />
		</order>

		<!-- Finder methods -->
		<finder name="GroupId" return-type="Collection">
			<finder-column name="groupId" />
		</finder>
		<finder name="GroupIdAndUrlTitle" return-type="Course" unique="true">
			<finder-column name="groupId" />
			<finder-column name="urlTitle" />
		</finder>
		<finder name="GroupIdAndName" return-type="Course" unique="true">
			<finder-column name="groupId" />
			<finder-column name="name" />
		</finder>

	</entity>

	<entity name="CourseSubscription" local-service="true" remote-service="false" cache-enabled="false">
		<!-- PK fields -->
		<column name="courseSubscriptionId" primary="true" type="long" />
		<!-- Other fields -->
		<column name="courseId" type="long" />
		<column name="userId" type="long" />
		<!-- Finder methods -->
		<finder name="CourseIdAndUserId" return-type="CourseSubscription" unique="true">
			<finder-column name="courseId" />
			<finder-column name="userId" />
		</finder>
		<finder name="CourseId" return-type="Collection">
			<finder-column name="courseId" />
		</finder>
		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
	</entity>

	<entity name="Lecture" local-service="true" remote-service="false" uuid="true">
		<!-- PK fields -->
		<column name="lectureId" primary="true" type="long" />
		<!-- Company ID / Group ID Fields -->
		<column name="companyId" type="long" />
		<column name="groupId" type="long" />
		<!-- Audit Fields -->
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />
		<!-- Other fields -->
		<column name="courseId" type="long" />
		<column name="name" type="String" />
		<column name="description" type="String" />
		<column name="videoLink" type="String" />
		<column name="urlTitle" type="String" />
		<!-- Finder methods -->
		<finder name="CourseId" return-type="Collection">
			<finder-column name="courseId" />
		</finder>
		<finder name="GroupIdAndUrlTitle" return-type="Course" unique="true">
			<finder-column name="groupId" />
			<finder-column name="urlTitle" />
		</finder>
		<finder name="CourseIdAndName" return-type="Course" unique="true">
			<finder-column name="courseId" />
			<finder-column name="name" />
		</finder>
	</entity>

	<exceptions>
		<exception>DuplicateCourseName</exception>
		<exception>DuplicateUrlTitle</exception>
		<exception>CourseNameLength</exception>
		<exception>CourseDescriptionLength</exception>
		<exception>DuplicateLectureName</exception>
		<exception>LectureNameLength</exception>
		<exception>LectureDescriptionLength</exception>
		<exception>LectureVideoLink</exception>
	</exceptions>


</service-builder>